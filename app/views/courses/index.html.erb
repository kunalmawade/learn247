<h1>Listing Courses</h1>

<%= link_to 'Add New Course', new_course_path %><br><br>
<% if @courses.present? %>
	<table class='table table-striped table-bordered table-hover table-responsive'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Session</th>
        <th>Class average</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.start_date %></td>
          <td><%= course.end_date %></td>
          <td><%= Course::SESSIONS[course.session] %></td>
          <td><%= course.class_average %></td>
          <td><%= link_to 'Show', course , class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info" role="alert">
    You do not have any courses to administrate.
  </div>
<% end %>